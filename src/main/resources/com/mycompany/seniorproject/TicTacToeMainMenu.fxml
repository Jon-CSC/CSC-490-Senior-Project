<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.seniorproject.TicTacToeMainMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="188.0">
         <children>
            <Label alignment="CENTER" text="Tic-Tac-Toe">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="25.0" top="50.0" />
               </padding>
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="Main Menu">
               <padding>
                  <Insets bottom="25.0" top="25.0" />
               </padding>
            </Label>
            <Label fx:id="labelLocalMatch" alignment="CENTER" onMouseClicked="#onLocalMatchMouseClick" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Local Match">
               <padding>
                  <Insets bottom="12.5" top="12.5" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="labelNetworkMatch" alignment="CENTER" onMouseClicked="#onNetworkMatchMouseClick" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Network Match">
               <padding>
                  <Insets bottom="12.5" top="12.5" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="labelOptions" alignment="CENTER" onMouseClicked="#onOptionsMouseClick" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Options">
               <padding>
                  <Insets bottom="12.5" top="12.5" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="labelQuit" alignment="CENTER" onMouseClicked="#onQuitMouseClick" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Quit">
               <padding>
                  <Insets bottom="12.5" top="12.5" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
