<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" styleClass="background" stylesheets="@../../../styles/loginpage.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.seniorproject.ForgotPasswordPageController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" layoutX="34.0" onKeyPressed="#onEnter" prefHeight="500.0" prefWidth="500.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label focusTraversable="false" styleClass="label-title" text="Forgot Password" textFill="WHITE">
               <font>
                  <Font name="Tahoma Bold" size="21.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" fillWidth="false" focusTraversable="true" prefHeight="137.0" prefWidth="218.0" spacing="30.0" styleClass="small-vbox">
               <children>
                  <TextField fx:id="emailField" prefHeight="30.0" prefWidth="180.0" promptText="Email Address" styleClass="text-field" />
                  <Button focusTraversable="false" mnemonicParsing="false" prefHeight="30.0" prefWidth="180.0" text="Send Email" />
                  <Label fx:id="errorLabel" style="-fx-font-weight: bold;" text="Error Messages Appear Down Here" textFill="#ff4242" wrapText="true" />
                  <Label fx:id="successLabel" style="-fx-font-weight: bold;" text="Password request sent to admin" textFill="#49ff3c" wrapText="true" />
                  <Hyperlink onAction="#goToLoginPage" text="Back To Login" textFill="WHITE">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Hyperlink>
               </children>
            </VBox>
            <Label focusTraversable="false" onMouseClicked="#goToLoginPage" styleClass="label-link" text="Back to Log In" />
            <Label fx:id="errorLabel" focusTraversable="false" styleClass="label-error" text="Error Messages Appear Down Here" textFill="#ff4242" wrapText="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
