<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="480.0" prefWidth="522.0" stylesheets="@../../../../../styles/games/tictactoemenus.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.seniorproject.games.tictactoe.TicTacToeNetworkMatchSetUpController">
   <children>
      <HBox id="HBoxParent" fx:id="hboxParent" alignment="CENTER" minHeight="480.0" minWidth="640.0" prefHeight="480.0" prefWidth="640.0" stylesheets="@../../../../../styles/games/tictactoemenus.css" />
      <BorderPane>
         <center>
            <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefWidth="250.0">
                     <children>
                        <Label text="Host a match">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" top="30.0" />
                           </VBox.margin>
                        </Label>
                        <FlowPane>
                           <children>
                              <Label text="Your IP:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="labelHostIP" text="Label">
                                 <FlowPane.margin>
                                    <Insets left="45.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </FlowPane>
                        <FlowPane prefHeight="28.0" prefWidth="250.0">
                           <children>
                              <Label text="Port Number: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="textFieldPortNumHost" text="7777" />
                              <Label fx:id="hostPortErrorMessage" text=" * Required (0 - 65536)" textFill="RED" visible="false">
                                 <FlowPane.margin>
                                    <Insets left="10.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </FlowPane>
                        <HBox alignment="TOP_RIGHT">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="buttonHost" mnemonicParsing="false" onMouseClicked="#onHostButtonClick" prefWidth="50.0" text="Host">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                        <HBox>
                           <VBox.margin>
                              <Insets bottom="10.0" top="100.0" />
                           </VBox.margin>
                           <children>
                              <Label text="Join a match">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <FlowPane>
                           <children>
                              <Label text="Host IP: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="textFieldHostIP">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <FlowPane.margin>
                                    <Insets left="36.0" />
                                 </FlowPane.margin>
                              </TextField>
                              <Label fx:id="joinHostErrorMessage" text=" * Required" textFill="RED" visible="false">
                                 <FlowPane.margin>
                                    <Insets left="10.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </FlowPane>
                        <FlowPane>
                           <children>
                              <Label text="Port Number: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="textFieldPortNumClient" />
                              <Label fx:id="joinPortErrorMessage" text=" * Required (0 - 65535)" textFill="RED" visible="false">
                                 <FlowPane.margin>
                                    <Insets left="10.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </FlowPane>
                        <HBox alignment="TOP_RIGHT">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="buttonConnect" mnemonicParsing="false" onMouseClicked="#onConnectButtonClick" prefWidth="50.0" text="Join">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </center>
         <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Network Match">
                     <font>
                        <Font size="36.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="BOTTOM_RIGHT" fillHeight="false" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <children>
                  <Button fx:id="buttonBack" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onBackButtonClick" prefWidth="50.0" text="Back">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <right>
            <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="BOTTOM_RIGHT" />
         </right>
      </BorderPane>
      <ProgressIndicator fx:id="progressIndicatorConnecting" StackPane.alignment="CENTER" />
      <Label fx:id="labelConnectionFailed" text="Connection Failed" textAlignment="CENTER" textFill="RED" visible="false">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</StackPane>
