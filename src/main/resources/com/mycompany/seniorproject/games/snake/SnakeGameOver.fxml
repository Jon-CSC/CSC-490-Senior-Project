<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" styleClass="background" stylesheets="@../../../../../styles/games/snakegame.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.seniorproject.games.snake.SnakeGameOverController">
    <children>
        <Pane prefHeight="1400.0" prefWidth="700.0">
            <children>
                <ImageView fx:id="checkerboard" fitHeight="700.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@snake_checkerboard.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="checkerboard2" fitHeight="700.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true" y="700.0">
                    <image>
                        <Image url="@snake_checkerboard.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="700.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="20.0" styleClass="vbox">
                    <children>
                        <Label styleClass="label-title" text="Game Over!" />
                  <Label fx:id="labelLastScore" text="score" />
                  <Label fx:id="labelHighScore" text="best" />
                        <Label onMouseClicked="#playAgain" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Play Again" />
                        <Label onMouseClicked="#exit" onMouseEntered="#onMenuSelectionMouseEnter" onMouseExited="#onMenuSelectionMouseExit" text="Exit" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
